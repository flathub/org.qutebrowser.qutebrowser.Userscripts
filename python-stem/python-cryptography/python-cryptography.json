{
    "name": "python-cryptography",
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "env": [
            "CARGO_HOME=/run/build/python-cryptography/cargo"
        ]
    },
    "buildsystem": "simple",
    "build-commands": [
        "python setup.py build",
        "python setup.py install --skip-build --prefix=${FLATPAK_DEST} --root=/ --optimize=1"
    ],
    "sources": [
        {
            "type": "archive",
            "url": "https://github.com/pyca/cryptography/archive/37.0.3.tar.gz",
            "sha256": "8d8b49af0e44aba3822db240bd9ce8ccedfd436810cf20ce38c8ad3fe57ed5aa"
        },
        "cargo-sources.json"
    ],
    "modules": [
        "../python-setuptools-rust/python-setuptools-rust.json"
    ]
}